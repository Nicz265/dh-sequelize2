<%- include('../partials/head') %> 
    <h2><%= movie.title %></h2>
    <ul>
		<li>
            <b>Genero: </b>
            <% if (movie.genre == null) { %>
                Sin género
            <% } else { %>
                <a href="/genres/detail/<%= movie.genre.id %>"> <%= movie.genre ? movie.genre.name : 'Sin género' %> </a>
            <% } %>
            <br>
            <b>Premios: </b> <%= movie.awards ? movie.awards : 'Sin premios' %>
			<br>
            <b>Duración: </b> <%= movie.length ? movie.length : 'Sin duración' %> 
            <br>
            <b>Rating: </b> <%= movie.rating ? movie.rating : 'Sin rating' %>
			<br>
            <b>Estreno: </b> <%= movie.release_date.getFullYear() %> 
            <br>
            <b>Actores: </b> 
            <% if (movie.actors.length == 0) { %>
                Sin Actores
            <% } else { %>
                <% movie.actors.forEach(actor => { %>
                    <ul>
                        <li>
                            <a href="/actors/detail/<%= actor.id %>"> <%= actor.getFullName() %> </a>
                        </li>
                    </ul>
				<% }) %>
            <% } %>
            <br>
		</li>
    </ul>
    <a href="/movies/edit/<%= movie.id %>">
        <button>MODIFICAR</button>
    </a>
    <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
        <button type='submit'>BORRAR</button>
    </form>
<%- include('../partials/footer')  %> 
