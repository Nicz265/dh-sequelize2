<%- include('../partials/head') %> 
    <h2><%= movie.title %></h2>
    <ul>
		<li>
            <b>Genero: </b> <%= movie.genre ? movie.genre.name : 'Sin género' %> 
            <br>
            <b>Premios: </b> <%= movie.awards ? movie.awards : 'Sin premios' %>
			<br>
            <b>Duración: </b> <%= movie.length ? movie.length : 'Sin duración' %> 
            <br>
            <b>Rating: </b> <%= movie.rating ? movie.rating : 'Sin rating' %>
			<br>
            <b>Estreno: </b> <%= movie.release_date.getFullYear() %> 
            <br>
            <b>Actores: </b> <% movie.actors.forEach(actor => { %>
				<%= actor.getFullName() %>
				<% }) %>
            <br>
		</li>
    </ul>
    <a href="/movies/edit/<%= movie.id %>">
        <button>MODIFICAR</button>
    </a>
    <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
        <button type='submit'>BORRAR</button>
    </form>
<%- include('../partials/footer')  %> 
